<h2>{{fa-icon "clipboard-list"}} {{@title}}</h2>

<ul>
  {{#each @posts as |post|}}
    <li>{{post.title}}
      <button {{action (action "toggleModal")}}>Body</button>
    </li>
  {{!-- {{/each}} --}}
{{!-- </ul> --}}

{{#if isShowingModal}}
  {{#modal-dialog
      onClose=(action "toggleModal")
      targetAttachment="center"
      translucentOverlay=true
  }}
   {{post.body}}
  {{/modal-dialog}}
{{/if}}
{{/each}}
</ul>

{{yield}}